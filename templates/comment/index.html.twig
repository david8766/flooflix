{% extends 'base.html.twig' %} {% block title %}Comment index{% endblock %} {% block body %}
<div class="container">
    <h1>Liste des commentaires</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Film</th>
                <th>Contenu</th>
                <th>date du commentaire</th>
                <th>Nom du client</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.movie }}</td>
                <td>{{ comment.content }}</td>
                <td>{{ comment.postDate ? comment.postDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.user }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('comment_show', {'id': comment.id}) }}">Voir</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="4">Pas de commentaires enregistrés</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary btn-lg" href="{{ path('comment_new') }}">Créer un commentaire</a>
    <a class="btn btn-primary btn-lg" href="/">Retour à l'accueil du site</a>
</div>
{% endblock %}