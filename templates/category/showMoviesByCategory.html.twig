{% extends 'base.html.twig' %} 
{% block title %}Choix des films{% endblock %} 
{% block body %}
<div class="container-fluid bg-dark">
    <a href="/">
        <img src="../../images/flooflix2.png" alt="FLOOFLIX">
    </a>
    <div class="jumbotron pop film">   
        <div class="container"> 
            <h1>Les films de la catégorie "{{ category.genre }}" :</h1>
            <div class="card-group">
                <div class="row">
                    {% for movie in category.movies %}
                    <div class="card text-white bg-dark mb-3 col-md-12">
                        <div class="card-body">
                            <div class="card-block">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-4 img-film">
                                            <img id="img-film" class="img-rounded img-fluid " src="../../images/{{ movie.img }}" alt="{{ movie.title }}">
                                        </div>
                                        <div class="col-md-8">
                                            <h2 class="card-title">{{ movie.title }}</h2>
                                            <hr>
                                            <h3>
                                                <u>Résumé:</u>
                                            </h3>
                                            <p> {{ movie.synopsis }}</p>
                                            <hr>
                                            <h3>
                                                <u>Prix:</u>
                                            </h3>
                                            <p>{{ movie.price }} &euro;</p>
                                            {% if user is defined %}
                                            <a class="btn btn-danger btn-lg" href="">ajouter au panier</a>
                                            {% endif %}
                                            <a class="btn btn-info btn-lg" href="/movie/comments/{{ movie.id }}">voir les commentaires</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="container footfilm">
        <div class="row justify-content-between">
            <a class="btn btn-primary btn-lg col-md-5" href="/category/categories">Retour à la liste des catégories</a>
            <div class="col-md-2"></div>
            <a class="btn btn-primary btn-lg col-md-5" href="/">Retour à l'accueil du site</a>
        </div>
    </div>
</div>

{% endblock %}