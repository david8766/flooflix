{% extends 'base.html.twig' %} {% block title %}Role index{% endblock %} {% block body %}
<div class="container">
    <h1>Liste des roles:</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                <th>Id</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.role }}</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="{{ path('role_show', {'id': role.id}) }}">Voir</a>
                    <a class="btn btn-primary btn-sm" href="{{ path('role_edit', {'id': role.id}) }}">Modifier</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="3">aucun role créé</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('role_new') }}" class="btn btn-primary btn-lg" role="button" aria-disabled="true">Créer un nouveau role</a>
    <a class="btn btn-primary btn-lg" href="/">Retour à l'accueil du site</a>
</div>
{% endblock %}