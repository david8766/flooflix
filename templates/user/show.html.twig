{% extends 'base.html.twig' %} {% block title %}Données de l'utilisateur{% endblock %} {% block body %}
<div class="container">
    <h1>Données de l'utilisateur:</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Credits</th>
                <td>{{ user.credits }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.login }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ user.mail }}</td>
            </tr>
            <tr>
                <th>RegisterDate</th>
                <td>{{ user.registerDate |date('d/m/Y H:i:s')}}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary btn-lg" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
    <p>ou</p>
    {{ include('user/_delete_form.html.twig') }}
    <hr>
    <a class="btn btn-primary btn-lg" href="{{ path('user_index') }}">Retour à la liste</a>
    <a class="btn btn-primary btn-lg" href="/">Retour à l'accueil du site</a>
</div>
{% endblock %}