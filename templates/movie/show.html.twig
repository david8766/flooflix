{% extends 'base.html.twig' %} {% block title %}Movie{% endblock %} {% block body %}
<div class="container">
    <h1>Liste des films</h1>

    <table class="table table-dark">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ movie.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ movie.synopsis }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ movie.price }}</td>
            </tr>
            <tr>
                <th>Affiche du film</th>
                <td>{{ movie.img }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary btn-lg" href="{{ path('movie_edit', {'id': movie.id}) }}">Modifier</a>
    <p>ou</p>
    {{ include('movie/_delete_form.html.twig') }}
    <hr>
    <a class="btn btn-primary btn-lg" href="{{ path('movie_index') }}">Retour à la liste</a>
    <a class="btn btn-primary btn-lg" href="/">Retour à l'accueil du site</a>
</div>
{% endblock %}